@page
@model RegisterModel
<link rel="stylesheet" href="/css/Register.css" />

<div class="auth-container">
    <h2>CHILL<span style="color: #4caf50;">GO</span></h2>
    <p class="subtitle">Реєстрація</p>
    <form method="post" class="auth-form">
        <label for="name">Ім'я</label>
        <input asp-for="Input.Name" id="name" placeholder="Введіть ваше ім'я" />
        
        <label for="email">Електронна пошта</label>
        <input asp-for="Input.Email" id="email" type="email" placeholder="Введіть ваш email" />
        
        <label for="password">Пароль</label>
        <input asp-for="Input.Password" id="password" type="password" placeholder="Введіть ваш пароль" />
        
        <button type="submit">Зареєструватися</button>
    </form>
    @if (!string.IsNullOrEmpty(Model.Message))
    {
        <p class="error-message">@Model.Message</p>
    }
</div>
